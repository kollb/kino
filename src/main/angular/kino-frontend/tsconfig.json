{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "useDefineForClassFields": false,
    "paths": {
      "@core": [
        "./src/app/core"
      ],
      "@core/*": [
        "./src/app/core/*"
      ],
      "@shared": [
        "./src/app/shared"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@material": [
        "./src/app/material"
      ],
      "@material/*": [
        "./src/app/material/*"
      ],
      "@account": [
        "./src/app/account"
      ],
      "@account/*": [
        "./src/app/account/*"
      ],
      "@api": [
        "./src/app/api"
      ],
      "@api/*": [
        "./src/app/api/*"
      ],
      "@admin": [
        "./src/app/admin"
      ],
      "@admin/*": [
        "./src/app/admin/*"
      ],
      "@login": [
        "./src/app/login"
      ],
      "@login/*": [
        "./src/app/login/*"
      ],
      "@movie": [
        "./src/app/movie"
      ],
      "@movie/*": [
        "./src/app/movie/*"
      ],
      "@reservation": [
        "./src/app/reservation"
      ],
      "@reservation/*": [
        "./src/app/reservation/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": false
  }
}
